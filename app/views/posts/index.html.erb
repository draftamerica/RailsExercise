<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<h2><%= @user.username %></h2>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
            <td><%= post.title %></td>
            <td><%= post.content %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
